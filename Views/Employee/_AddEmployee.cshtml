@model EmployeeManagement.Models.Employee

<div>
    <h2>Add New Employee</h2>
    <form asp-action="AddEmployee" asp-controller="Employee" method="post" id="addEmployeeForm">
        <div class="form-group">
            <label asp-for="FirstName">First Name:</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName">Last Name:</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="City">City:</label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Zip">Zip:</label>
            <input asp-for="Zip" class="form-control" />
            <span asp-validation-for="Zip" class="text-danger"></span>
        </div>

        <!-- Add other necessary form fields according to your data model -->

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>

@section scripts {
    <script>
        // Function to submit the form via AJAX
        $("#addEmployeeForm").submit(function (e) {
            e.preventDefault(); // Prevent the default form submission
            $.ajax({
                url: $(this).attr("action"),
                type: $(this).attr("method"),
                data: $(this).serialize(),
                success: function (data) {
                    // Update the employee table with the updated data
                    $("#employeeTable").html(data);
                    // Close the modal or handle the UI as needed
                    $("#addEmployeeModal").modal("hide");
                },
                error: function (error) {
                    console.error("Error adding new employee:", error);
                }
            });
        });
    </script>
}
